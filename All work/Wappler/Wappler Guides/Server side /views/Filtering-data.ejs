<dmx-serverconnect id="serverconnect1" url="/api/octarecords" dmx-param:filters="text1.value" dmx-param:filter="text1.value"></dmx-serverconnect>
<div class="container mb-4">
    <div class="row">
        <input id="text1" name="text1" type="text" class="form-control mt-4">
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <table class="table align-top table-primary">
                <thead class="thead-dark table-dark">
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Name</th>
                        <th scope="col">age</th>
                        <th scope="col">email</th>
                    </tr>
                </thead>
                <tbody is="dmx-repeat" id="repeat1" dmx-bind:repeat="serverconnect1.data.query">
                    <tr>
                        <th scope="row">{{serverconnect1.data.query[0].id}}</th>
                        <td>{{serverconnect1.data.query[0].name}}</td>
                        <td>15</td>
                        <td>{{serverconnect1.data.query[0].email}}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{serverconnect1.data.query[1].id}}</th>
                        <td>{{serverconnect1.data.query[1].name}}</td>
                        <td>{{serverconnect1.data.query[2].age}}</td>
                        <td>{{serverconnect1.data.query[3].email}}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{serverconnect1.data.query[2].id}}</th>
                        <td>{{serverconnect1.data.query[1].name}}</td>
                        <td>{{serverconnect1.data.query[3].age}}</td>
                        <td>{{serverconnect1.data.query[4].email}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>